<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  
  <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
     <layout class="org.apache.log4j.PatternLayout">
       <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%-12.12t] &lt;%-5p&gt; &lt;%m&gt;%n"/>
     </layout>
  </appender>
  
  <appender class="org.apache.log4j.RollingFileAppender" name="api">
     <param name="File" value="@h2.home@/logs/api.log"/>
     <param name="Encoding" value="UTF-8"/>
     <param name="MaxFileSize" value="5MB"/>
     <param name="MaxBackupIndex" value="1"/>
     <layout class="org.apache.log4j.PatternLayout">
       <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%-12.12t] &lt;%-5p&gt; &lt;%m&gt;%n"/>
     </layout>
  </appender>
  
  <category name="hk.hku.cecid.hermes.api">
    <priority value="debug"/>
    <appender-ref ref="api"/>
  </category>
  
</log4j:configuration>
